{% extends "::base.html.twig" %}

{% block mainContainer %}
    {{ form_start(form, {'method': 'post', 'action': path('oc_user_register'), 'attr': {'novalidate': 'novalidate'}}) }}
    <div class="row">
        <div class="col-md-12">
            {{ form_errors(form) }}
        </div>
        <div class="col-md-6">
            <h2>Etat civil :</h2>
            <div class="row">
                <div class="col-md-4">
                    {{ form_row(form.usrNom) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.usrPrenom) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.email) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.usrAdresse) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.usrCp) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.usrVille) }}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <h2>Information profesionnel :</h2>
            <div class="row">
                <div class="col-md-4">
                    {{ form_row(form.usrFonction) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.usrSupp) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.usrDateEmbauche) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    {{ form_row(form.usrDepartement) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.usrRegion) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.usrSecteur) }}
                </div>
            </div>
        </div>
    </div>
    <div>
        <input type="submit" />
    </div>
    {{ form_end(form) }}
{% endblock %}